<!DOCTYPE html>

<title>Promos index</title>

{% block body %}
    <h1>Promos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.id }}</td>
                <td>{{ promo.value }}</td>
                <td>
                    <a href="{{ path('app_promos_show', {'id': promo.id}) }}">show</a>
                    <a href="{{ path('app_promos_edit', {'id': promo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_promos_new') }}">Create new</a>
{% endblock %}
